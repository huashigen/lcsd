<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:gravity="center_horizontal" android:orientation="vertical">

    
	<LinearLayout android:id="@+id/pop_layout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_horizontal" android:orientation="vertical"
		android:layout_alignParentTop="true">
		
		<RelativeLayout 
		    android:id="@+id/rl_all"
		    android:layout_width="fill_parent"
			android:layout_height="50dip" android:gravity="center_vertical"
			android:background="@color/white">
			<TextView 
			    android:layout_alignParentLeft="true"
			    android:drawableLeft="@drawable/all"
			    android:layout_width="wrap_content"
				android:padding="5dp" android:layout_height="wrap_content"
				android:text=" 所有投资产品"
				android:layout_marginLeft="20dp"
				android:textSize="20sp" android:textColor="@color/black" />

			<ImageView 
			    android:visibility="gone"
			    android:id="@+id/iv_all"
			     android:layout_centerVertical="true"
			    android:layout_marginRight="10dp"
			    android:background="@drawable/mark"
				android:layout_width="wrap_content" android:layout_alignParentRight="true"
				android:layout_height="wrap_content" />
		</RelativeLayout>
		<View  
		    android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/listview_divider" />
		<RelativeLayout 
		     android:id="@+id/rl_gaofushuai"
		    android:layout_width="fill_parent"
			android:layout_height="50dip" android:gravity="center_vertical"
			android:background="@color/white">
			<TextView 
			    android:layout_alignParentLeft="true"
			     android:drawableLeft="@drawable/ri"
			    android:layout_width="wrap_content"
				android:padding="5dp" android:layout_height="wrap_content"
				android:text=" 短期宝"
				android:layout_marginLeft="20dp"
				android:textSize="20sp" android:textColor="@color/black" />

			<ImageView 
			     android:visibility="gone"
			    android:id="@+id/iv_gaofushuai"
			    android:layout_centerVertical="true"
			    android:layout_marginRight="10dp"
			    android:background="@drawable/mark"
				android:layout_width="wrap_content" android:layout_alignParentRight="true"
				android:layout_height="wrap_content" />
		</RelativeLayout>
		
		<View  android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/listview_divider" />
		<RelativeLayout 
		     android:id="@+id/rl_baifumei"
		    android:layout_width="fill_parent"
			android:layout_height="50dip" android:gravity="center_vertical"
			android:background="@color/white">
			<TextView 
			    android:layout_alignParentLeft="true"
			     android:drawableLeft="@drawable/yue"
			    android:layout_width="wrap_content"
				android:padding="5dp" android:layout_height="wrap_content"
				android:text=" 超益宝"
				android:layout_marginLeft="20dp"
				android:textSize="20sp" android:textColor="@color/black" />

			<ImageView 
			     android:visibility="gone"
			     android:id="@+id/iv_baifumei"
			    android:background="@drawable/mark"
				android:layout_width="wrap_content" 
				android:layout_centerVertical="true"
				android:layout_marginRight="10dp"
				android:layout_alignParentRight="true"
				android:layout_height="wrap_content" />
		</RelativeLayout>
		<View  android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/listview_divider" />
		
		<RelativeLayout 
		     android:id="@+id/rl_fuerdai"
		    android:layout_width="fill_parent"
			android:layout_height="50dip" android:gravity="center_vertical"
			android:background="@color/white">
			<TextView 
			    android:layout_alignParentLeft="true"
			     android:drawableLeft="@drawable/nian"
			    android:layout_width="wrap_content"
				android:padding="5dp" android:layout_height="wrap_content"
				android:text=" 长期宝"
				android:layout_marginLeft="20dp"
				android:textSize="20sp" android:textColor="@color/black" />

			<ImageView 
			     android:visibility="gone"
			      android:id="@+id/iv_fuerdai"
			    android:layout_centerVertical="true"
				android:layout_marginRight="10dp"
			    android:background="@drawable/mark"
				android:layout_width="wrap_content" android:layout_alignParentRight="true"
				android:layout_height="wrap_content" />
		</RelativeLayout>
			<View  android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/listview_divider" />
		<RelativeLayout 
		     android:id="@+id/rl_dudt"
		    android:layout_width="fill_parent"
			android:layout_height="50dip" android:gravity="center_vertical"
			android:background="@color/white">
			<TextView 
			    android:layout_alignParentLeft="true"
			     android:drawableLeft="@drawable/sudt"
			    android:layout_width="wrap_content"
				android:padding="5dp" android:layout_height="wrap_content"
				android:text=" 速转让"
				android:layout_marginLeft="20dp"
				android:textSize="20sp" android:textColor="@color/black" />

			<ImageView 
			     android:visibility="gone"
			      android:id="@+id/iv_dudt"
			    android:layout_centerVertical="true"
				android:layout_marginRight="10dp"
			    android:background="@drawable/mark"
				android:layout_width="wrap_content" android:layout_alignParentRight="true"
				android:layout_height="wrap_content" />
		</RelativeLayout>
	<View  android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/listview_divider" />
	
	<RelativeLayout 
	    android:visibility="gone"
		     android:id="@+id/rl_newcus"
		    android:layout_width="fill_parent"
			android:layout_height="50dip" android:gravity="center_vertical"
			android:background="@color/white">
			<TextView 
			     android:drawableLeft="@drawable/xin"
			    android:layout_width="wrap_content"
				android:padding="5dp" android:layout_height="wrap_content"
				android:text="  新客专区"
				android:textSize="20sp" android:textColor="@color/black" />

			<ImageView 
			      android:id="@+id/iv_new_cus"
			    android:layout_centerVertical="true"
				android:layout_marginRight="10dp"
			    android:background="@drawable/mark"
				android:layout_width="wrap_content" android:layout_alignParentRight="true"
				android:layout_height="wrap_content" />
		</RelativeLayout>
		
	<View  
	    android:visibility="gone"
	    android:layout_width="fill_parent"
			android:layout_height="1dp" android:background="@drawable/listview_divider" />
	
	</LinearLayout>
	
	<ImageView 
	    android:layout_below="@id/pop_layout"
	    android:id="@+id/ll_back"
		android:layout_width="fill_parent" android:layout_height="match_parent"
		android:background="#b0000000"
		/>
	
</RelativeLayout>