<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_res"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.lcshidai.lc.widget.AnieLayout
        android:id="@+id/ll_dpop_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_pay_pwd_pp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_dpop_res"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_success" />

            <TextView
                android:id="@+id/tv_pop_reg_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="恭喜，注册成功！"
                android:textColor="#343434"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dpop_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="获得20元新手红包"
            android:textColor="#343434"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_give_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="首次投资后再送20元"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

        <View
            android:id="@+id/vw_dpop_res"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#DEDEDE" />

        <TextView
            android:id="@+id/tv_rule_res"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="使用规则"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <View
            android:id="@+id/vi_dpop_res"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#DEDEDE" />

        <Button
            android:id="@+id/btn_dpop_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/account_login_bg_xml"
            android:padding="5dp"
            android:text="我知道啦"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </com.lcshidai.lc.widget.AnieLayout>

</LinearLayout>