<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/fragment_actionbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请输入六位数字手机支付密码"
            android:textColor="#666666"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/layout_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_account_pay_pwd_margin"
            android:background="@drawable/bg_conrner_rectangular"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/pay_pwd_iv_0"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:scaleType="center" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="#B2B2B2" />

            <ImageView
                android:id="@+id/pay_pwd_iv_1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:scaleType="center" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="#B2B2B2" />

            <ImageView
                android:id="@+id/pay_pwd_iv_2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:scaleType="center" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="#B2B2B2" />

            <ImageView
                android:id="@+id/pay_pwd_iv_3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:scaleType="center" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="#B2B2B2" />

            <ImageView
                android:id="@+id/pay_pwd_iv_4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:scaleType="center" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="#B2B2B2" />

            <ImageView
                android:id="@+id/pay_pwd_iv_5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:scaleType="center" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            style="@style/style_button_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dimens_account_pay_pwd_margin"
            android:text="确定" />
    </LinearLayout>

    <com.lcshidai.lc.widget.AnieLayout
        android:id="@+id/pay_pwd_ll_keyboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#B9B9B9"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="1dp" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="1dp" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="1dp" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="1dp" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_hidden"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/c_hide_xmlr"
                    android:gravity="center" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/c_x_xmlr"
                    android:gravity="center" />
            </RelativeLayout>
        </LinearLayout>
    </com.lcshidai.lc.widget.AnieLayout>

</LinearLayout>