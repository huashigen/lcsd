<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#FAFAFA" >
    
    <include layout="@layout/fragment_actionbar"/>
    
    <LinearLayout 
        style="@style/style_rw_info_ll"
        >
        <TextView 
            style="@style/style_rw_info_left_tv"
            android:text="申请时间:"
            />
        <TextView 
            android:id="@+id/recharge_info_vlaue_time"
            style="@style/style_rw_info_right_tv"
            android:textColor="#1C8FE9"
            />
    </LinearLayout>
    <View 
        style="@style/style_rw_info_line"
        />
    
    <LinearLayout 
        style="@style/style_rw_info_ll"
        >
        <TextView 
            style="@style/style_rw_info_left_tv"
            android:text="状态:"
            />
        <TextView 
            android:id="@+id/recharge_info_vlaue_status"
            style="@style/style_rw_info_right_tv"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View 
        style="@style/style_rw_info_line"
        />
    
    <LinearLayout 
        style="@style/style_rw_info_ll"
        >
        <TextView 
            style="@style/style_rw_info_left_tv"
            android:text="充值金额（元）:"
            />
        <TextView 
            android:id="@+id/recharge_info_vlaue_money"
            style="@style/style_rw_info_right_tv"
            android:textColor="#FF6E40"
            />
    </LinearLayout>
    <View 
        style="@style/style_rw_info_line"
        />
    
    <LinearLayout 
        android:id="@+id/recharge_info_ll_actualmoney"
        style="@style/style_rw_info_ll"
        android:visibility="visible"
        >
        <TextView 
            style="@style/style_rw_info_left_tv"
            android:text="实际到账金额（元）:"
            />
        <TextView 
            android:id="@+id/recharge_info_vlaue_actualmoney"
            style="@style/style_rw_info_right_tv"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View 
        android:id="@+id/recharge_info_line_actualmoney"
        style="@style/style_rw_info_line"
        android:visibility="visible"
        />
    
    <LinearLayout 
        android:id="@+id/recharge_info_ll_type"
        style="@style/style_rw_info_ll"
        android:visibility="gone"
        >
        <TextView 
            style="@style/style_rw_info_left_tv"
            android:text="充值方式:"
            />
        <TextView 
            android:id="@+id/recharge_info_vlaue_type"
            style="@style/style_rw_info_right_tv"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View 
        android:id="@+id/recharge_info_line_type"
        style="@style/style_rw_info_line"
        android:visibility="gone"
        />
    
    <LinearLayout 
        android:id="@+id/recharge_info_ll_bank"
        style="@style/style_rw_info_ll"
        android:visibility="gone"
        >
        <TextView 
            style="@style/style_rw_info_left_tv"
            android:text="转账银行:"
            />
        <TextView 
            android:id="@+id/recharge_info_vlaue_bank"
            style="@style/style_rw_info_right_tv"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View 
        android:id="@+id/recharge_info_line_bank"
        style="@style/style_rw_info_line"
        android:visibility="gone"
        />
    
    <LinearLayout 
        android:id="@+id/recharge_info_ll_shenqingbeckup"
        style="@style/style_rw_info_ll"
        android:visibility="gone"
        >
        <TextView 
            style="@style/style_rw_info_left_tv"
            android:text="申请备注:"
            />
        <TextView 
            android:id="@+id/recharge_info_vlaue_shenqingbeckup"
            style="@style/style_rw_info_right_tv"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View 
        android:id="@+id/recharge_info_line_shenqingbeckup"
        style="@style/style_rw_info_line"
        android:visibility="gone"
        />
    

    <LinearLayout 
        style="@style/style_rw_info_ll"
        >
        <TextView 
            style="@style/style_rw_info_left_tv"
            android:text="处理时间:"
            />
        <TextView 
            android:id="@+id/recharge_info_vlaue_chltime"
            style="@style/style_rw_info_right_tv"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View 
        style="@style/style_rw_info_line"
        />
    
    <LinearLayout 
        android:id="@+id/recharge_info_ll_liushui"
        style="@style/style_rw_info_ll"
        >
        <TextView 
            style="@style/style_rw_info_left_tv"
            android:text="支付流水号:"
            />
        <TextView 
            android:id="@+id/recharge_info_vlaue_liushui"
            style="@style/style_rw_info_right_tv"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View 
        android:id="@+id/recharge_info_line_liushui"
        style="@style/style_rw_info_line"
        />
    
    <LinearLayout 
        style="@style/style_rw_info_ll"
        >
        <TextView 
            style="@style/style_rw_info_left_tv"
            android:text="处理备注:"
            />
        <TextView 
            android:id="@+id/recharge_info_vlaue_chulibeckup"
            style="@style/style_rw_info_right_tv"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View 
        style="@style/style_rw_info_line"
        />
    
    <Button 
        android:id="@+id/recharge_info_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/feedback_submit_bg_xml"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:visibility="gone"
        />
</LinearLayout>
