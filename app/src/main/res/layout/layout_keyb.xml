<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EDEFEF"
    android:padding="10dp"
    android:id="@+id/keyboard_main"
    android:visibility="visible"
     >
    
    <LinearLayout 
        style="@style/style_keyboard_ll"
        >
		<Button 
		    android:id="@+id/b1"
		    style="@style/style_keyboard_bt"
		    android:text="1"
			/> 
		<Button 
		    android:id="@+id/b2"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="2"
			/> 
		<Button 
		    android:id="@+id/b3"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="3"
			/> 
		<LinearLayout 
		    android:id="@+id/view_plus"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/keyboard_square_bg"
		    >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:textSize="14sp"
		        android:textColor="@color/black"
		        android:textStyle="bold"
		        android:text="+"
		        />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:textSize="14sp"
		        android:textColor="#888888"
		        android:textStyle="bold"
		        android:id="@+id/bplus"
		        />
		</LinearLayout>
    </LinearLayout>

    <LinearLayout 
        style="@style/style_keyboard_ll"
        >
		<Button 
		    android:id="@+id/b4"
		    style="@style/style_keyboard_bt"
		    android:text="4"
			/> 
		<Button 
		    android:id="@+id/b5"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="5"
			/> 
		<Button 
		    android:id="@+id/b6"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="6"
			/> 
		<LinearLayout 
		    android:id="@+id/view_minus"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:background="@drawable/keyboard_square_bg"
		    android:layout_marginLeft="10dp"
		    >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:textSize="14sp"
		        android:textColor="@color/black"
		        android:textStyle="bold"
		        android:text="-"
		        />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:textSize="14sp"
		        android:textColor="#888888"
		        android:textStyle="bold"
		        android:id="@+id/bminus"
		        />
		</LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        style="@style/style_keyboard_ll"
        >
		<Button 
		    android:id="@+id/b7"
		    style="@style/style_keyboard_bt"
		    android:text="7"
			/> 
		<Button 
		    android:id="@+id/b8"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="8"
			/> 
		<Button 
		    android:id="@+id/b9"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="9"
			/> 
		<ImageButton 
		    android:id="@+id/bx"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:src="@color/transparent"
		    android:background="@drawable/backspace_kbg"
		    android:layout_marginLeft="10dp"
		    />
    </LinearLayout>
    
    
    <LinearLayout 
        style="@style/style_keyboard_ll"
        >
		<Button 
		    android:id="@+id/bpoint"
		    style="@style/style_keyboard_bt"
		    android:text="."
			/> 
		<Button 
		    android:id="@+id/b0"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="0"
			/> 
		<Button 
		    android:id="@+id/b00"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="00"
			/> 
		
		<ImageButton 
		    android:id="@+id/bhide"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:background="@drawable/shrink_keyboard_bkg"
		    android:src="@color/transparent"
		    android:layout_marginLeft="10dp"
		    />
    </LinearLayout>
</LinearLayout>
