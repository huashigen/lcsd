<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_feedback_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_pay_pwd_pp"

     >
  
<LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/imgToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_sucess"
        />
  
    <TextView 
        android:id="@+id/toast_feedback_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/tv_default"
        android:padding="14dp"
        android:text="谢谢支持"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:scrollbars="vertical"
        android:singleLine="false"
        />
     
</LinearLayout>
    
</LinearLayout>
