<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EDEFEF"
    android:padding="10dp"
    android:id="@+id/keyboard_main"
    android:visibility="visible"
    android:clickable="true"
     >
    
    <LinearLayout 
        style="@style/style_keyboard_ll"
        >
		<Button 
		    android:id="@+id/keyborad_bt_1"
		    style="@style/style_keyboard_bt"
		    android:text="1"
			/> 
		<Button 
		    android:id="@+id/keyborad_bt_2"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="2"
			/> 
		<Button 
		    android:id="@+id/keyborad_bt_3"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="3"
			/> 
		<LinearLayout 
		    android:id="@+id/keyboard_ll_plus"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/keyboard_square_bg"
		    >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:textSize="14sp"
		        android:textColor="@color/black"
		        android:textStyle="bold"
		        android:text="+"
		        />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:textSize="14sp"
		        android:textColor="#888888"
		        android:textStyle="bold"
		        android:text="1000"
		        />
		</LinearLayout>
    </LinearLayout>

    <LinearLayout 
        style="@style/style_keyboard_ll"
        >
		<Button 
		    android:id="@+id/keyborad_bt_4"
		    style="@style/style_keyboard_bt"
		    android:text="4"
			/> 
		<Button 
		    android:id="@+id/keyborad_bt_5"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="5"
			/> 
		<Button 
		    android:id="@+id/keyborad_bt_6"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="6"
			/> 
		<LinearLayout 
		    android:id="@+id/keyboard_ll_reduce"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:background="@drawable/keyboard_square_bg"
		    android:layout_marginLeft="10dp"
		    >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:textSize="14sp"
		        android:textColor="@color/black"
		        android:textStyle="bold"
		        android:text="-"
		        />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:textSize="14sp"
		        android:textColor="#888888"
		        android:textStyle="bold"
		        android:text="1000"
		        />
		</LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        style="@style/style_keyboard_ll"
        >
		<Button 
		    android:id="@+id/keyborad_bt_7"
		    style="@style/style_keyboard_bt"
		    android:text="7"
			/> 
		<Button 
		    android:id="@+id/keyborad_bt_8"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="8"
			/> 
		<Button 
		    android:id="@+id/keyborad_bt_9"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="9"
			/> 
		<ImageButton 
		    android:id="@+id/keyboard_ib_delete"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:src="@color/transparent"
		    android:background="@drawable/backspace_kbg"
		    android:layout_marginLeft="10dp"
		    />
    </LinearLayout>
    
    
    <LinearLayout 
        style="@style/style_keyboard_ll"
        >
		<Button 
		    android:id="@+id/keyborad_bt_dot"
		    style="@style/style_keyboard_bt"
		    android:text="."
			/> 
		<Button 
		    android:id="@+id/keyborad_bt_0"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="0"
			/> 
		<Button 
		    android:id="@+id/keyborad_bt_00"
		    style="@style/style_keyboard_bt"
		    android:layout_marginLeft="5dp"
		    android:text="00"
			/> 
		
		<ImageButton 
		    android:id="@+id/keyboard_ib_hidden"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:background="@drawable/shrink_keyboard_bkg"
		    android:src="@color/transparent"
		    android:layout_marginLeft="10dp"
		    />
    </LinearLayout>
</LinearLayout>
