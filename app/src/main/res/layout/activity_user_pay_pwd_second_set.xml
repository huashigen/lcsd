<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FAFAFA"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/fragment_actionbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="请再次确认您的支付密码"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/layout_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_conrner_rectangular"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pay_pwd_iv_0"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:scaleType="center" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="#B2B2B2" />

            <ImageView
                android:id="@+id/pay_pwd_iv_1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:scaleType="center" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="#B2B2B2" />

            <ImageView
                android:id="@+id/pay_pwd_iv_2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:scaleType="center" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="#B2B2B2" />

            <ImageView
                android:id="@+id/pay_pwd_iv_3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:scaleType="center" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="#B2B2B2" />

            <ImageView
                android:id="@+id/pay_pwd_iv_4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:scaleType="center" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="40dp"
                android:background="#B2B2B2" />

            <ImageView
                android:id="@+id/pay_pwd_iv_5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.0"
                android:scaleType="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_operate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_input"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dimens_account_pay_pwd_margin"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_cancel"
                android:padding="5dp"
                android:text="重新设置"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/feedback_submit_bg_xml"
                android:padding="5dp"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
            android:text="支付密码用于您在平台进行充值、投资、提现等涉及资金变动的操作验证"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <com.lcshidai.lc.widget.AnieLayout
        android:id="@+id/pay_pwd_ll_keyboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="#B9B9B9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="1dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="1dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="1dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="1dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_hidden"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/c_hide_xmlr"
                    android:gravity="center" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_num_bg"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@drawable/textcolor_font_bg"
                    android:textSize="28sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/pay_pwd_keyboard_ib_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/c_x_xmlr"
                    android:gravity="center" />
            </RelativeLayout>
        </LinearLayout>
    </com.lcshidai.lc.widget.AnieLayout>

</LinearLayout>
