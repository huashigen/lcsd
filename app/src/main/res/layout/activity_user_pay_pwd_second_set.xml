<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:background="#FAFAFA"
	android:fitsSystemWindows="true"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" >
	<include layout="@layout/fragment_actionbar" />
     <LinearLayout android:layout_width="fill_parent"
	    android:gravity="center_horizontal" android:layout_weight="1"
	    android:layout_margin="10dp"
		android:layout_height="0dp" android:orientation="vertical" >
			<TextView
			    android:id="@+id/tv_head"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    android:text="输入确认密码"
			    android:textSize="18sp"
			    android:textColor="#666666" />
			<LinearLayout
			    android:id="@+id/layout_input"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_margin="@dimen/dimens_account_pay_pwd_margin"
			    android:background="@drawable/bg_conrner_rectangular"
			    android:orientation="horizontal" >
					<ImageView android:id="@+id/pay_pwd_iv_0"
					    android:layout_weight="1.0"
					    android:scaleType="center"
						android:layout_width="0dp" android:layout_height="40dp" />
					<View android:layout_width="0.5dp" android:layout_height="40dp"
						android:background="#B2B2B2" />
					<ImageView android:id="@+id/pay_pwd_iv_1"
					    android:layout_weight="1.0"
					    android:scaleType="center"
						android:layout_width="0dp" android:layout_height="40dp" />
					<View android:layout_width="0.5dp" android:layout_height="40dp"
						android:background="#B2B2B2" />
					<ImageView android:id="@+id/pay_pwd_iv_2"
					    android:layout_weight="1.0"
					    android:scaleType="center"
						android:layout_width="0dp" android:layout_height="40dp" />
					<View android:layout_width="0.5dp" android:layout_height="40dp"
						android:background="#B2B2B2" />
					<ImageView android:id="@+id/pay_pwd_iv_3"
					    android:layout_weight="1.0"
					    android:scaleType="center"
						android:layout_width="0dp" android:layout_height="40dp" />
					<View android:layout_width="0.5dp" android:layout_height="40dp"
						android:background="#B2B2B2" />
					<ImageView android:id="@+id/pay_pwd_iv_4"
					    android:layout_weight="1.0"
					    android:scaleType="center"
						android:layout_width="0dp" android:layout_height="40dp" />
					<View android:layout_width="0.5dp" android:layout_height="40dp"
						android:background="#B2B2B2" />
					<ImageView android:id="@+id/pay_pwd_iv_5"
					    android:layout_weight="1.0"
					    android:scaleType="center"
						android:layout_width="0dp" android:layout_height="40dp" />
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/ll_operate"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@+id/layout_input"
			    android:layout_margin="@dimen/dimens_account_pay_pwd_margin"
			    android:layout_centerHorizontal="true"
			    android:orientation="horizontal" >
					<Button android:id="@+id/btn_reset"
						android:layout_width="0dp" android:layout_height="wrap_content"
						android:layout_weight="1" android:background="@drawable/bg_button_cancel"
						android:textColor="@color/white" android:textSize="20sp"
						android:padding="5dp" android:layout_marginRight="10dp"
						android:text="重新设置" />
					<Button android:id="@+id/btn_commit"
						android:layout_width="0dp" android:layout_height="wrap_content"
						android:layout_weight="1" android:background="@drawable/feedback_submit_bg_xml"
						android:textColor="@color/white" android:textSize="20sp"
						android:padding="5dp" android:layout_marginLeft="10dp"
						android:text="确定" />
			</LinearLayout>
			</LinearLayout>
			<com.lcshidai.lc.widget.AnieLayout
				android:layout_weight="1"
				android:id="@+id/pay_pwd_ll_keyboard" android:layout_width="match_parent"
				android:layout_height="0dp" 
				android:orientation="vertical" android:layout_alignParentBottom="true"
				android:background="#B9B9B9">
			<LinearLayout android:gravity="center" 
				android:paddingTop="1dp"
				android:layout_width="match_parent" android:layout_height="0dp"
				android:layout_weight="1">
				<RelativeLayout 
				    android:background="@color/white"
				    android:layout_weight="1"
				    android:layout_width="0dp"
				    android:layout_height="match_parent">
				<TextView 
				    android:layout_centerInParent="true"
				    android:background="@drawable/keyboard_num_bg"
				    android:text="1" android:textSize="28sp" android:textColor="@drawable/textcolor_font_bg"
				    android:gravity="center" android:id="@+id/pay_pwd_keyboard_ib_1"
					android:layout_width="match_parent" android:layout_height="match_parent" />
				</RelativeLayout>
				<ImageView android:layout_width="1dp" android:background="@color/transparent" android:layout_height="match_parent"/>
				<RelativeLayout 
				    android:background="@color/white"
				    android:layout_weight="1"
				    android:layout_width="0dp"
				    android:layout_height="match_parent">
				<TextView 
				    android:background="@drawable/keyboard_num_bg"
				    android:layout_centerInParent="true" android:textSize="28sp" android:textColor="@drawable/textcolor_font_bg"
				    android:text="2" android:gravity="center" android:id="@+id/pay_pwd_keyboard_ib_2"
					android:layout_width="match_parent" android:layout_height="match_parent" />
				</RelativeLayout>
				<ImageView android:layout_width="1dp" android:background="@color/transparent" android:layout_height="match_parent"/>
				<RelativeLayout 
				    android:background="@color/white"
				    android:layout_weight="1"
				    android:layout_width="0dp"
				    android:layout_height="match_parent" >
				<TextView 
				    android:background="@drawable/keyboard_num_bg"
				    android:layout_centerInParent="true" android:textSize="28sp" android:textColor="@drawable/textcolor_font_bg"
				    android:text="3" android:gravity="center" android:id="@+id/pay_pwd_keyboard_ib_3"
					android:layout_width="match_parent" android:layout_height="match_parent" />
				</RelativeLayout>
			</LinearLayout>
			<LinearLayout
			    android:orientation="horizontal"
			     android:gravity="center"
			     android:paddingTop="1dp"
				android:layout_width="match_parent" android:layout_height="0dp"
				android:layout_weight="1">
				<RelativeLayout 
				    android:background="@color/white"
				    android:layout_weight="1"
				    android:layout_width="0dp"
				    android:layout_height="match_parent" >
				<TextView 
				    android:background="@drawable/keyboard_num_bg"
				    android:layout_centerInParent="true" android:text="4" android:gravity="center" android:id="@+id/pay_pwd_keyboard_ib_4"
					android:layout_width="match_parent" android:layout_height="match_parent"
					android:textSize="28sp" android:textColor="@drawable/textcolor_font_bg" />
				</RelativeLayout>
				<ImageView android:layout_width="1dp" android:background="@color/transparent" android:layout_height="match_parent"/>
				<RelativeLayout 
				    android:layout_weight="1"
				    android:background="@color/white"
				    android:layout_width="0dp"
				    android:layout_height="match_parent" >
				<TextView 
				    android:background="@drawable/keyboard_num_bg"
				    android:layout_centerInParent="true" android:text="5" android:gravity="center" android:id="@+id/pay_pwd_keyboard_ib_5"
					android:layout_width="match_parent" android:layout_height="match_parent"
					android:textSize="28sp" android:textColor="@drawable/textcolor_font_bg" />
				</RelativeLayout>
				<ImageView android:layout_width="1dp" android:background="@color/transparent" android:layout_height="match_parent"/>
				<RelativeLayout 
				    android:layout_weight="1"
				    android:background="@color/white"
				    android:layout_width="0dp"
				    android:layout_height="match_parent" >
				<TextView 
				    android:background="@drawable/keyboard_num_bg"
				    android:layout_centerInParent="true" android:text="6" android:gravity="center" android:id="@+id/pay_pwd_keyboard_ib_6"
					android:layout_width="match_parent" android:layout_height="match_parent" android:textSize="28sp" android:textColor="@drawable/textcolor_font_bg" />
				</RelativeLayout>
			</LinearLayout>
			<LinearLayout
			    android:orientation="horizontal" android:gravity="center" 
			    android:paddingTop="1dp"
				android:layout_width="match_parent" android:layout_height="0dp"
				android:layout_weight="1">
				<RelativeLayout 
				    android:layout_weight="1"
				    android:layout_width="0dp"
				    android:background="@color/white"
				    android:layout_height="match_parent" >
				<TextView 
				    android:background="@drawable/keyboard_num_bg"
				    android:layout_centerInParent="true" android:text="7" android:gravity="center" android:id="@+id/pay_pwd_keyboard_ib_7"
					android:layout_width="match_parent" android:layout_height="match_parent"
					android:textSize="28sp" android:textColor="@drawable/textcolor_font_bg" />
				</RelativeLayout>
				<ImageView android:layout_width="1dp" android:background="@color/transparent" android:layout_height="match_parent"/>
				<RelativeLayout 
				    android:layout_weight="1"
				    android:layout_width="0dp"
				    android:background="@color/white"
				    android:layout_height="match_parent" >
				<TextView 
				    android:background="@drawable/keyboard_num_bg"
				    android:layout_centerInParent="true" android:text="8" android:gravity="center" android:id="@+id/pay_pwd_keyboard_ib_8"
					android:layout_width="match_parent" android:layout_height="match_parent"
					 android:textSize="28sp" android:textColor="@drawable/textcolor_font_bg" />
				</RelativeLayout>
				<ImageView android:layout_width="1dp" android:background="@color/transparent" android:layout_height="match_parent"/>
				<RelativeLayout 
				    android:layout_weight="1"
				    android:layout_width="0dp"
				    android:background="@color/white"
				    android:layout_height="match_parent" >
				<TextView 
				    android:background="@drawable/keyboard_num_bg"
				    android:layout_centerInParent="true" android:text="9" android:gravity="center" android:id="@+id/pay_pwd_keyboard_ib_9"
					android:layout_width="match_parent" android:layout_height="match_parent" android:textSize="28sp" android:textColor="@drawable/textcolor_font_bg" />
				</RelativeLayout>
			</LinearLayout>
			<LinearLayout
			    android:orientation="horizontal" android:gravity="center" 
			    android:paddingTop="1dp"
				android:layout_width="match_parent" android:layout_height="0dp"
				android:layout_weight="1">
				<RelativeLayout 
				    android:layout_weight="1"
				    android:layout_width="0dp"
				    android:background="@color/white"
				    android:layout_height="match_parent" >
				<TextView 
				    android:layout_centerInParent="true"  android:gravity="center" android:id="@+id/pay_pwd_keyboard_ib_hidden"
					android:layout_width="match_parent" android:layout_height="match_parent"
					android:background="@drawable/c_hide_xmlr" />
				</RelativeLayout>
				<ImageView android:layout_width="1dp" android:background="@color/transparent" android:layout_height="match_parent"/>
				<RelativeLayout 
				    android:layout_weight="1"
				    android:layout_width="0dp"
				    android:background="@color/white"
				    android:layout_height="match_parent" >
				<TextView 
				    android:background="@drawable/keyboard_num_bg"
				    android:layout_centerInParent="true" android:text="0" android:gravity="center" android:id="@+id/pay_pwd_keyboard_ib_0"
					android:layout_width="match_parent" android:layout_height="match_parent"
					 android:textSize="28sp" android:textColor="@drawable/textcolor_font_bg" />
				</RelativeLayout>
				<ImageView android:layout_width="1dp" android:background="@color/transparent" android:layout_height="match_parent"/>
				<RelativeLayout 
				    android:layout_weight="1"
				    android:layout_width="0dp"
				    android:background="@color/white"
				    android:layout_height="match_parent" >
				<TextView 
				    android:layout_centerInParent="true"  android:gravity="center" android:id="@+id/pay_pwd_keyboard_ib_delete"
					android:layout_width="match_parent" android:layout_height="match_parent"
					android:background="@drawable/c_x_xmlr" />
				</RelativeLayout>
			</LinearLayout>
		</com.lcshidai.lc.widget.AnieLayout>
		
</LinearLayout>
