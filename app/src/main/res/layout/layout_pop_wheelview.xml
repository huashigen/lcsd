<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<View 
        android:id="@+id/pop_wheelview_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0b000000"
        android:clickable="true"
        />
	
	<com.lcshidai.lc.widget.AnieLayout
        android:id="@+id/pop_wheelview_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
         >
        <LinearLayout 
            android:id="@+id/pop_wheelview_ll_button0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:visibility="gone"
            >
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#F2F2F2"
	            android:orientation="horizontal"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:paddingTop="10dp"
	             >
	            <Button 
	                android:id="@+id/pop_wheelview_bt_cancel0"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:paddingTop="6dp"
	                android:paddingBottom="6dp"
	                android:textColor="@color/white"
	                android:textSize="18sp"
	                android:background="@drawable/bg_button_square_cancel"
	                android:text="取消"
	                />
	            <Button 
	                android:id="@+id/pop_wheelview_bt_submit0"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:paddingTop="6dp"
	                android:paddingBottom="6dp"
	                android:layout_marginLeft="2dp"
	                android:textColor="@color/white"
	                android:textSize="18sp"
	                android:background="@drawable/bg_button_square_orange"
	                android:text="确定"
	                />
	        </LinearLayout>
	        <View 
		        android:layout_width="match_parent"
		        android:layout_height="15dp"
		        android:background="#F5F5F5"
		        />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/pop_wheelview_ll_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:visibility="gone"
             >
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#E6E6E6"
	            android:gravity="center_vertical"
	            android:orientation="horizontal"
	             >
	            <TextView 
	                android:id="@+id/pop_wheelview_bt_cancel1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/theme_color"
	                android:textSize="16sp"
	                android:paddingLeft="20dp"
	                android:paddingRight="20dp"
	                android:paddingTop="8dp"
	                android:paddingBottom="8dp"
	                android:text="取消"
	                />
	            <TextView 
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:textColor="#686868"
	                android:textSize="16sp"
	                android:gravity="center"
	                android:text="请选择银行卡"
	                />
	            <TextView 
	                android:id="@+id/pop_wheelview_bt_submit1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/theme_color"
	                android:textSize="16sp"
	                android:paddingLeft="20dp"
	                android:paddingRight="20dp"
	                android:paddingTop="8dp"
	                android:paddingBottom="8dp"
	                android:text="完成"
	                />
	        </LinearLayout>
	        <View 
		        android:layout_width="match_parent"
		        android:layout_height="5dp"
		        android:background="#F5F5F5"
		        />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
             >
            <View 
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/wheel_bg_border"
                android:clickable="true"
                android:visibility="gone"
                />
            <RelativeLayout 
	            android:layout_width="10dp"
	            android:layout_height="match_parent"
	            android:background="@drawable/wheel_bg_left_div"
	            android:clickable="true"
	            android:visibility="gone"
	             >
	            <View 
	                android:layout_width="1dp"
	                android:layout_height="match_parent"
	                android:layout_alignParentLeft="true"
	                android:background="@drawable/wheel_bg_left_div_borderl"
	                />
	            <View 
	                android:layout_width="1dp"
	                android:layout_height="match_parent"
	                android:layout_alignParentRight="true"
	                android:background="@drawable/wheel_bg_left_div_borderl"
	                />
	            <View 
	                android:layout_width="match_parent"
	                android:layout_height="46dp"
	                android:background="#FF6100"
	                android:layout_centerVertical="true"
	                />
          	</RelativeLayout>
            <RelativeLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
		        android:layout_weight="1"
                 >
			    <com.lcshidai.lc.widget.wheelview.WheelView
			        android:id="@+id/pop_wheelview_wv"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:clickable="true"
			        android:visibility="visible"
			         >
		        </com.lcshidai.lc.widget.wheelview.WheelView>
	        </RelativeLayout>
	        <View 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/wheel_bg_left_div_borderl"
                android:layout_marginLeft="-1dp"
		        android:clickable="true"
                />
	        <View 
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/wheel_bg_border"
		        android:clickable="true"
		        android:visibility="gone"
                />
        </LinearLayout>
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="15dp"
	        android:background="#F5F5F5"
	        android:clickable="true"
	        />
    </com.lcshidai.lc.widget.AnieLayout>
    
</RelativeLayout>
