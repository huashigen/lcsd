<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_layout_dialog_account"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/dialog_onebtn_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_title"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="10dp"
        />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/help_center_dialog_driver"
        />
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="15dp"
         android:background="#F3F2F0"
         android:orientation="vertical" >
         <RelativeLayout
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content" >
	         <TextView
	             style="@style/finance_item_textview4"
	             android:textSize="12dp"
	             android:layout_alignParentRight="true"
	             android:text="金额(元)" />
         </RelativeLayout>
         <RelativeLayout
             android:layout_marginTop="10dp"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content" >
	         <TextView
	             android:id="@+id/tv_show1"
	             style="@style/layout_dialog_text_view_show" />
	
	         <TextView
	             android:id="@+id/tv_text1"
	             style="@style/layout_dialog_text_view_text"
	             android:layout_alignParentRight="true"
	             android:text="0.00" />
         </RelativeLayout>
         <RelativeLayout
             android:layout_marginTop="10dp"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content" >
	         <TextView
	             android:id="@+id/tv_show2"
	             style="@style/layout_dialog_text_view_show" />
	
	         <TextView
	             android:id="@+id/tv_text2"
	             style="@style/layout_dialog_text_view_text"
	             android:layout_alignParentRight="true"
	             android:text="0.00" />
         </RelativeLayout>
         <RelativeLayout
             android:layout_marginTop="10dp"
             android:id="@+id/rl_dialog3"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content" >
	         <TextView
	             android:id="@+id/tv_show3"
	             style="@style/layout_dialog_text_view_show" />
	
	         <TextView
	             android:id="@+id/tv_text3"
	             style="@style/layout_dialog_text_view_text"
	             android:layout_alignParentRight="true"
	             android:text="0.00" />
         </RelativeLayout>
         <TextView
            android:layout_marginTop="10dp"
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@drawable/help_center_dialog_driver" />
         <RelativeLayout
             android:layout_marginTop="10dp"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content" >
	         <TextView
	             android:id="@+id/tv_show4"
	             style="@style/layout_dialog_text_view_show" />
	
	         <TextView
	             android:id="@+id/tv_text4"
	             style="@style/layout_dialog_text_view_text"
	             android:layout_alignParentRight="true"
	             android:text="0.00" />
         </RelativeLayout>
    </LinearLayout>
</LinearLayout>
