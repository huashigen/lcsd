<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="8" >

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:background="@drawable/bg_layout_dialog_account"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/style_safe_text"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="安全等级：低" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/star_1"
                style="@style/style_safe_star" />

            <ImageView
                android:id="@+id/star_2"
                style="@style/style_safe_star" />

            <ImageView
                android:id="@+id/star_3"
                style="@style/style_safe_star" />

            <ImageView
                android:id="@+id/star_4"
                style="@style/style_safe_star" />

            <ImageView
                android:id="@+id/star_5"
                style="@style/style_safe_star" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/line_1" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_mobile"
                    style="@style/style_safe_ll" >

                    <TextView
                        style="@style/style_safe_text"
                        android:text="手机认证" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_mobile"
                        style="@style/style_safe_text"
                        android:text="去认证" />
                    
                    <ImageView
                        android:id="@+id/img_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_safe_certified" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_1" />

                <LinearLayout
                    android:id="@+id/ll_login_psw"
                    style="@style/style_safe_ll" >

                    <TextView
                        style="@style/style_safe_text"
                        android:text="登录密码" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_login_psw"
                        style="@style/style_safe_text"
                        android:text="去设置" />
                    
                    <ImageView
                        android:id="@+id/img_login_psw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_safe_certified" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_1" />

                <LinearLayout
                    android:id="@+id/ll_email"
                    style="@style/style_safe_ll" >

                    <TextView
                        style="@style/style_safe_text"
                        android:text="邮箱认证" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_email"
                        style="@style/style_safe_text"
                        android:text="去认证" />
                    
                    <ImageView
                        android:id="@+id/img_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_safe_certified" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_1" />

                <LinearLayout
                    android:id="@+id/ll_real_name"
                    style="@style/style_safe_ll" >

                    <TextView
                        style="@style/style_safe_text"
                        android:text="实名认证" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_real_name"
                        style="@style/style_safe_text"
                        android:text="去认证" />
                    
                    <ImageView
                        android:id="@+id/img_real_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_safe_certified" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_1" />

                <LinearLayout
                    android:id="@+id/ll_lock"
                    style="@style/style_safe_ll" >

                    <TextView
                        style="@style/style_safe_text"
                        android:text="解锁密码" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_lock"
                        style="@style/style_safe_text"
                        android:text="去开启" />
                    
                    <ImageView
                        android:id="@+id/img_lock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_safe_certified" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_1" />

                <LinearLayout
                    android:id="@+id/ll_pay"
                    style="@style/style_safe_ll" >

                    <TextView
                        style="@style/style_safe_text"
                        android:text="支付密码" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_pay"
                        style="@style/style_safe_text"
                        android:text="去设置" />
                    
                    <ImageView
                        android:id="@+id/img_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_safe_certified" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_1" />

                <LinearLayout
                    android:id="@+id/ll_question"
                    style="@style/style_safe_ll" >

                    <TextView
                        style="@style/style_safe_text"
                        android:text="安全问题" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_question"
                        style="@style/style_safe_text"
                        android:text="去设置" />
                    
                    <ImageView
                        android:id="@+id/img_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_safe_certified" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_1" />

        <TextView
            android:id="@+id/cancel"
            style="@style/style_safe_text"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="12dp"
            android:text="取消"
            android:textColor="@color/theme_color" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>