<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
	android:fitsSystemWindows="true"
    android:background="#FAFAFA"
    android:orientation="vertical" >
    <include layout="@layout/fragment_actionbar" />
    <RelativeLayout 
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:id="@+id/rl_top_type"
        android:layout_width="match_parent"
         android:background="@drawable/list_item_frame_bg"
        android:layout_height="50dip"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
			android:orientation="horizontal"      
			android:layout_marginBottom="10dp"      
            >
            <TextView
                android:id="@+id/tv_top_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="所有投资产品"
                android:textSize="22sp"
                android:textColor="#2B7EC2"
                />
            <ImageView 
                android:id="@+id/iv_top_content_flag"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
               	android:background="@drawable/icon_indicator_down"
                />
        </LinearLayout>
        
    </RelativeLayout>
    
    	<RelativeLayout 
	    android:id="@+id/rl_top0"
	    android:layout_marginTop="5dp"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	     android:background="@drawable/list_item_frame_bg"
	    android:layout_width="wrap_content"
	    android:paddingLeft="5dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:paddingRight="5dp"
	    android:layout_height="wrap_content"
	    >
	    <TextView 
	        android:id="@+id/rl_tv_left0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="预售投资"
	         android:textColor="#888888"
	        android:textSize="20sp"
	        android:layout_alignParentLeft="true"
	        />
	    
	    <ImageView 
	         android:layout_centerVertical="true"
	        android:layout_marginRight="2dp"
	    	android:id="@+id/iv_biding00"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
			android:background="@drawable/triangle"
	        />
	    <TextView 
	         android:layout_centerVertical="true"
	         android:layout_marginRight="2dp"
	        android:id="@+id/tv_biding_num0"
	         android:layout_toLeftOf="@id/iv_biding00"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/orange"
	        />
	    <TextView 
	         android:layout_centerVertical="true"
	        android:layout_marginRight="2dp"
	        android:id="@+id/tv_biding_num_title0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         android:textColor="#888888"
	        android:layout_toLeftOf="@id/tv_biding_num0"
	        android:text="项目数:"
	        />
	</RelativeLayout>
    
