<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#FAFAFA"
     >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
	    android:paddingTop="8dp"
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp"
	    android:orientation="vertical"
	     >
	    
        <LinearLayout 
            android:layout_width="match_parent"
	       	 android:layout_height="wrap_content"
	       	 android:orientation="horizontal"
	         android:background="@drawable/bg_bespeak_area_top_red"
	         android:paddingLeft="12dp"
	         android:paddingRight="0dp"
	         android:layout_marginBottom="4dp"
            >
			<LinearLayout 
		         android:layout_width="0dp"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
		         android:orientation="vertical"
		         android:paddingTop="10dp"
		         android:paddingBottom="10dp"
		          >
	             <TextView 
		             android:id="@+id/bespeak_area_tv_profit"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:textColor="#666666"
		             android:textSize="14sp"
		             />
		         <TextView 
		             android:id="@+id/bespeak_area_tv_profit_value"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:textColor="#FF6E40"
		             android:textSize="20sp"
		             android:textStyle="bold"
		             android:layout_marginTop="5dp"
		             android:text="-"
		             />
	         </LinearLayout>
	         <View 
	             android:layout_width="5dp"
	             android:layout_height="match_parent"
	             android:background="@drawable/bg_bespeak_area_top_red_right"
	             />
	     </LinearLayout>
	     
        <LinearLayout 
            android:layout_width="match_parent"
	       	 android:layout_height="wrap_content"
	       	 android:orientation="horizontal"
	         android:background="@drawable/bg_bespeak_area_top_blue"
	         android:paddingLeft="12dp"
	         android:paddingRight="0dp"
	         android:layout_marginBottom="4dp"
	         android:layout_marginTop="4dp"
            >
		     <LinearLayout 
		         android:layout_width="0dp"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
		         android:orientation="vertical"
		         android:paddingTop="10dp"
		         android:paddingBottom="10dp"
		          >
		         <TextView 
		             android:id="@+id/bespeak_area_tv_time"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:textColor="#666666"
		             android:textSize="14sp"
		             />
		         <TextView 
		             android:id="@+id/bespeak_area_tv_time_value"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:textColor="#498AF3"
		             android:textSize="20sp"
		             android:textStyle="bold"
		             android:layout_marginTop="5dp"
		             android:text="-"
		             />
		     </LinearLayout>
		     <View 
	             android:layout_width="5dp"
	             android:layout_height="match_parent"
	             android:background="@drawable/bg_bespeak_area_top_blue_right"
	             />
	     </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
	       	 android:layout_height="wrap_content"
	       	 android:orientation="horizontal"
	         android:background="@drawable/bg_bespeak_area_top_orange"
	         android:paddingLeft="12dp"
	         android:paddingRight="0dp"
	         android:layout_marginBottom="4dp"
	         android:layout_marginTop="4dp"
	         android:visibility="gone"
            >
		     <LinearLayout 
		         android:layout_width="0dp"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
		         android:orientation="vertical"
		         android:paddingTop="10dp"
		         android:paddingBottom="10dp"
		          >
		         <TextView 
		             android:id="@+id/bespeak_area_tv_money"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:textColor="#666666"
		             android:textSize="14sp"
		             />
		         <TextView 
		             android:id="@+id/bespeak_area_tv_money_value"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:textColor="#FFAA00"
		             android:textSize="20sp"
		             android:textStyle="bold"
		             android:layout_marginTop="5dp"
		             android:text="-"
		             />
		     </LinearLayout>
		     <View 
	             android:layout_width="5dp"
	             android:layout_height="match_parent"
	             android:background="@drawable/bg_bespeak_area_top_orange_right"
	             />
	     </LinearLayout>
	     
	     <LinearLayout 
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:orientation="vertical"
	         android:layout_marginTop="4dp"
	         android:padding="15dp"
	         android:background="@drawable/bg_square_border"
	          >
	         <LinearLayout 
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal"
	              >
	             <LinearLayout 
	                 android:layout_width="0dp"
	                 android:layout_height="wrap_content"
	                 android:layout_weight="1"
	                 android:orientation="vertical"
	                  >
	                 <TextView 
	             		android:id="@+id/bespeak_area_info_tv_success"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:textSize="14sp"
	                     android:textColor="#525252"
	                     />
	                 <TextView 
	             		android:id="@+id/bespeak_area_info_tv_success_value"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:textSize="14sp"
	                     android:textColor="@color/black"
	                     android:text="-"
	                     />
	             </LinearLayout>
	             <LinearLayout 
	                 android:layout_width="0dp"
	                 android:layout_height="wrap_content"
	                 android:layout_weight="1"
	                 android:orientation="vertical"
	                 android:layout_marginLeft="10dp"
	                  >
	                 <TextView 
	            		 android:id="@+id/bespeak_area_info_tv_profit"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:textSize="14sp"
	                     android:textColor="#525252"
	                     />
	                 <TextView 
	            		 android:id="@+id/bespeak_area_info_tv_profit_value"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:textSize="14sp"
	                     android:textColor="#63BE3B"
	                     android:text="-"
	                     />
	             </LinearLayout>
	         </LinearLayout>
	         
	         <LinearLayout 
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal"
	             android:layout_marginTop="10dp"
	              >
	             <LinearLayout 
	                 android:layout_width="0dp"
	                 android:layout_height="wrap_content"
	                 android:layout_weight="1"
	                 android:orientation="vertical"
	                  >
	                 <TextView 
	            		 android:id="@+id/bespeak_area_info_tv_money"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:textSize="14sp"
	                     android:textColor="#525252"
	                     />
	                 <TextView 
	            		 android:id="@+id/bespeak_area_info_tv_money_value"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:textSize="14sp"
	                     android:textColor="@color/black"
	                     android:text="-"
	                     />
	             </LinearLayout>
	             <LinearLayout 
	                 android:layout_width="0dp"
	                 android:layout_height="wrap_content"
	                 android:layout_weight="1"
	                 android:orientation="vertical"
	                 android:layout_marginLeft="10dp"
	                  >
	                 <TextView 
	            		 android:id="@+id/bespeak_area_info_tv_product"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:textSize="14sp"
	                     android:textColor="#525252"
	                     />
	                 <TextView 
	            		 android:id="@+id/bespeak_area_info_tv_product_value"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:textSize="14sp"
	                     android:textColor="@color/black"
	                     android:text="-"
	                     />
	             </LinearLayout>
	         </LinearLayout>
	     </LinearLayout>
     </LinearLayout>
     <View 
         android:layout_marginTop="8dp"
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#BBB9B9"
         />
</LinearLayout>
