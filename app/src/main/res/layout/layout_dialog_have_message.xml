<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/dialog_message_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_title"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="10dp"
        />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/help_center_dialog_driver"
        />
    <TextView 
        android:id="@+id/dialog_message_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:background="@color/help_center_bg"
        android:textColor="@color/black"
        android:padding="14dp"
        />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/help_center_dialog_driver"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        <Button 
            android:id="@+id/dialog_message_bt_absolute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            />
        <TextView 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DADADA"
            />
        <Button 
            android:id="@+id/dialog_message_bt_negative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            />
    </LinearLayout>
</LinearLayout>
