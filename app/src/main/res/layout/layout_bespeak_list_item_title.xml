<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:background="@color/white"
         >
        <LinearLayout 
            android:id="@+id/bespeak_record_title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
	        android:padding="12dp"
	        android:gravity="center_vertical"
             >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_bespepak"
                />
            <TextView 
		        android:id="@+id/bespeak_record_title_tv"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        android:textColor="@color/black"
		        android:layout_marginLeft="6dp"
		        android:text="预约记录"
		        />
        </LinearLayout>
        <View 
            android:layout_below="@id/bespeak_record_title_ll"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BBB9B9"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp" 
        android:paddingRight="10dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:background="#F5F7F7"
        >
        <TextView 
            style="@style/style_bespeak_area_list_tv"
            android:layout_weight="6"
            android:text="预约时间"
            />
        <TextView 
            style="@style/style_bespeak_area_list_tv"
            android:layout_weight="6"
            android:text="预约金额"
            />
        <TextView 
            style="@style/style_bespeak_area_list_tv"
            android:layout_weight="4"
            android:text="预约状态"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/triangle"
            android:visibility="invisible"
            />
    </LinearLayout>
    <View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#BBB9B9"
	    />

</LinearLayout>
