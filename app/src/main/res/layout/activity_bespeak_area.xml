<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:fitsSystemWindows="true"
    android:orientation="vertical" 
      android:id="@+id/ll_main"
    android:background="#FAFAFA" >
    
	<include layout="@layout/fragment_actionbar"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >
        <com.lcshidai.lc.widget.PinnedSectionListView
            android:id="@+id/bespeak_area_lv_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/transparent"
            android:fadingEdge="none"
            android:scrollbarStyle="outsideOverlay"
		    android:headerDividersEnabled="false"
		    android:footerDividersEnabled="false"
		    android:background="@color/white"
		    android:divider="@null"
            />
        <com.lcshidai.lc.widget.AnieLayout
	        android:id="@+id/bespaek_area_bottom"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:orientation="vertical"
    		android:background="#FAFAFA"
	         >
	         <Button
	             android:id="@+id/bespeak_area_bt_apply"
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:textColor="@color/white"
	             android:padding="10dp"
	             android:textSize="16sp"
	             android:layout_margin="10dp"
	             />
         </com.lcshidai.lc.widget.AnieLayout>
    </RelativeLayout>
	
</LinearLayout>
