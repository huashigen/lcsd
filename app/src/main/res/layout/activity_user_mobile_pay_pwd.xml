<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/fragment_actionbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_pay_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_bg"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:visibility="gone"
                    >

                    <TextView
                        style="@style/ll_item_textview"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="通过原手机支付密码校验" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/triangle" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_real"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_bg"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:visibility="gone" >

                    <TextView
                        style="@style/ll_item_textview"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="通过原手机短信 + 实名信息校验" />

                    <TextView
                        android:id="@+id/tv_pay_pwd"
                        style="@style/ll_item_textview"
                        android:gravity="left|center_vertical"
                        android:text=""
                        android:textColor="@color/blue" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/triangle" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bing_bank"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/list_item_bg"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:visibility="gone" >

                    <TextView
                        style="@style/ll_item_textview"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="通过原手机短信 + 绑定银行卡信息校验" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/triangle" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_set_sqa"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_bg"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:visibility="gone" >

                    <TextView
                        style="@style/ll_item_textview"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="通过原手机短信 + 安保问题校验" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/triangle" />
                </LinearLayout>
            </LinearLayout>
            <!-- 联系客服 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/channel_ll_tele"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone_number_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp" >

                    <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@drawable/icon_tele" />-->

                    <TextView
                        android:id="@+id/channel_telenumber_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="联系客服"
                        android:textColor="@color/theme_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/channel_telenumber_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/theme_color"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>

</LinearLayout>