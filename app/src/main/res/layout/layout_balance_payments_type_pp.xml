<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView 
        android:id="@+id/bp_pp_gray_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b0000000"
        />
    
    <LinearLayout 
        android:id="@+id/bp_pp_main_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0FAFAFA"
        >
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DBDBDB"
            />
	    <RelativeLayout 
	        android:id="@+id/bp_pp_quanbu_rl"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        >
	        <TextView 
	            android:id="@+id/bp_pp_quanbu_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/black"
android:layout_alignParentLeft="true"
android:layout_marginLeft="10dp"
	            android:padding="8dp"
	            android:text="全部"
	            />
	        <ImageView 
	            android:id="@+id/bp_pp_quanbu_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/img_check_press"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp" 
	            android:visibility="visible"
	            />
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="#DBDBDB"
	            android:layout_below="@id/bp_pp_quanbu_tv"
	            />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/bp_pp_chongzhi_rl"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        >
	        <TextView 
	            android:id="@+id/bp_pp_chongzhi_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/black"
android:layout_alignParentLeft="true"
android:layout_marginLeft="10dp"
	            android:padding="8dp"
	            android:text="充值"
	            />
	        <ImageView 
	            android:id="@+id/bp_pp_chongzhi_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/img_check_press"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp" 
	            android:visibility="gone"
	            />
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="#DBDBDB"
	            android:layout_below="@id/bp_pp_chongzhi_tv"
	            />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/bp_pp_touzi_rl"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        >
	        <TextView 
	            android:id="@+id/bp_pp_touzi_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/black"
android:layout_alignParentLeft="true"
android:layout_marginLeft="10dp"
	            android:padding="8dp"
	            android:text="投资"
	            />
	        <ImageView 
	            android:id="@+id/bp_pp_touzi_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/img_check_press"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="10dp" 
	            android:visibility="gone"
	            />
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="#DBDBDB"
	            android:layout_below="@id/bp_pp_touzi_tv"
	            />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/bp_pp_huikuan_rl"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        >
	        <TextView 
	            android:id="@+id/bp_pp_huikuan_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/black"
android:layout_alignParentLeft="true"
android:layout_marginLeft="10dp"
	            android:padding="8dp"
	            android:text="回款"
	            />
	        <ImageView 
	            android:id="@+id/bp_pp_huikuan_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:src="@drawable/img_check_press"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="10dp" 
	            android:visibility="gone"
	            />
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="#DBDBDB"
	            android:layout_below="@id/bp_pp_huikuan_tv"
	            />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/bp_pp_tixian_rl"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        >
	        <TextView 
	            android:id="@+id/bp_pp_tixian_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/black"
android:layout_alignParentLeft="true"
android:layout_marginLeft="10dp"
	            android:padding="8dp"
	            android:text="提现"
	            />
	        <ImageView 
	            android:id="@+id/bp_pp_tixian_iv"
	            android:layout_width="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_height="wrap_content"
	            android:src="@drawable/img_check_press"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="10dp" 
	            android:visibility="gone"
	            />
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="#DBDBDB"
	            android:layout_below="@id/bp_pp_tixian_tv"
	            />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/bp_pp_jiangli_rl"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        >
	        <TextView 
	            android:id="@+id/bp_pp_jiangli_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/black"
android:layout_alignParentLeft="true"
android:layout_marginLeft="10dp"
	            android:padding="8dp"
	            android:text="奖励"
	            />
	        <ImageView 
	            android:id="@+id/bp_pp_jiangli_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:src="@drawable/img_check_press"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="10dp" 
	            android:layout_marginLeft="20dp"
	            android:visibility="gone"
	            />
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="#DBDBDB"
	            android:layout_below="@id/bp_pp_jiangli_tv"
	            />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/bp_pp_zhaiquan_rl"
	        android:layout_width="match_parent"
	        android:visibility="gone"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        >
	        <TextView 
	            android:id="@+id/bp_pp_zhaiquan_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/black"
	            android:layout_centerInParent="true"
	            android:padding="8dp"
	            android:text="变现交易"
	            />
	        <ImageView 
	            android:id="@+id/bp_pp_zhaiquan_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/img_check_press"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@id/bp_pp_zhaiquan_tv"
	            android:layout_marginLeft="20dp"
	            android:visibility="gone"
	            />
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="#DBDBDB"
	            android:layout_below="@id/bp_pp_zhaiquan_tv"
	            />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/bp_pp_diyongquan_rl"
	        android:layout_width="match_parent"
	        android:visibility="gone"
	        android:layout_height="wrap_content"
	        android:clickable="true"
	        >
	        <TextView 
	            android:id="@+id/bp_pp_diyongquan_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="@color/black"
	            android:layout_centerInParent="true"
	            android:padding="8dp"
	            android:text="免费提现额度(已处理)"
	            />
	        <ImageView 
	            android:id="@+id/bp_pp_diyongquan_iv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/img_check_press"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@id/bp_pp_diyongquan_tv"
	            android:layout_marginLeft="20dp"
	            
	            />
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="#DBDBDB"
	            android:layout_below="@id/bp_pp_diyongquan_tv"
	            />
	    </RelativeLayout>
	    
	</LinearLayout>
</RelativeLayout>
