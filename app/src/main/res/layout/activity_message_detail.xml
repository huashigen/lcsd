<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:fitsSystemWindows="true"
    android:background="@color/white" >
    
    <include layout="@layout/fragment_actionbar"/>

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
             >
            <TextView 
                android:id="@+id/message_detail_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#333333"
                />
            <TextView 
                android:id="@+id/message_detail_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/message_detail_tv_type"
                android:textSize="12sp"
                android:textColor="#666666"
                />
            <View 
                android:id="@+id/message_detail_div"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBB9B9"
                android:layout_below="@id/message_detail_tv_type"
                android:layout_marginTop="4dp"
                />
            <com.lcshidai.lc.widget.text.HelpCenterTextView
		        android:id="@+id/message_detail_tv_info"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textColor="#666666"
		        android:textSize="14sp"
		        android:layout_below="@id/message_detail_div"
		        android:layout_marginTop="10dp"
		        />
            <Button 
                android:id="@+id/message_detail_bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
  	    		android:background="@drawable/feedback_submit_bg_xml"
  	    		android:layout_marginTop="20dp"
  	    		android:padding="10dp"
  	    		android:layout_below="@id/message_detail_tv_info"
  	    		android:text="查看项目"
  	    		android:visibility="gone"
                />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
